<Window x:Class="CourseWorkMathModel.ChooseElementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseWorkMathModel"
        mc:Ignorable="d"
        FontFamily="{StaticResource Inter}"
        Title="Выбор веществ" Height="500" Width="300"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid x:Name="layoutGrid" Margin="10" >
        <GroupBox x:Name="elementsGroupBox" Header="Выбрать вещество" FontWeight="Bold" FontSize="14">
            <StackPanel Margin="0, 10, 0, 0">

            </StackPanel>
        </GroupBox>
        <StackPanel Margin="0,400,0,10" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="allButton" Background="White" FontSize="14" FontWeight="Bold" Content="Выбрать все" Click="allButton_Click" Height="25" Margin="5, 0, 0, 0"/>
            <Button x:Name="OKButton" Background="White" FontSize="14" FontWeight="Bold" Content="Применить" Click="OKButton_Click" Margin="75, 0, 5, 0" Height="25"/>

        </StackPanel>
    </Grid>
</Window>
